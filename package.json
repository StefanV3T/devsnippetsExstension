{
  "name": "devsnippet",
  "displayName": "DevSnippet",
  "description": "Code snippet manager for developers",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Snippets",
    "Other"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
  "activitybar": [
    {
      "id": "devsnippet",
      "title": "DevSnippet",
      "icon": "resources/devsnippet.svg"
    }
  ]
},
"views": {
  "devsnippet": [
    {
      "id": "devsnippet.snippetsView",
      "name": "Snippets",
      "icon": "resources/snippet-icon.svg"
    },
    {
      "id": "devsnippet.tagsView",
      "name": "Tags",
      "icon": "resources/tag-icon.svg"
    }
  ]
},
    "commands": [
      {
        "command": "devsnippet.newSnippet",
        "title": "DevSnippet: Create New Snippet",
        "icon": "$(add)"
      },
      {
        "command": "devsnippet.editSnippet",
        "title": "Edit Snippet",
        "icon": "$(edit)"
      },
      {
        "command": "devsnippet.deleteSnippet",
        "title": "Delete Snippet",
        "icon": "$(trash)"
      },
      {
        "command": "devsnippet.copySnippet",
        "title": "Copy Snippet",
        "icon": "$(copy)"
      },
      {
        "command": "devsnippet.openSnippet",
        "title": "Open Snippet",
        "icon": "$(open-preview)"
      },
      {
        "command": "devsnippet.insertSnippet",
        "title": "Insert Snippet at Cursor",
        "icon": "$(insert)"
      },
      {
        "command": "devsnippet.searchSnippets",
        "title": "Search Snippets",
        "icon": "$(search)"
      },
      {
        "command": "devsnippet.refreshSnippets",
        "title": "Refresh Snippets",
        "icon": "$(refresh)"
      },
      {
        "command": "devsnippet.syncSnippets",
        "title": "Sync with Cloud",
        "icon": "$(cloud)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "devsnippet.newSnippet",
          "when": "view == devsnippet.snippetsView",
          "group": "navigation"
        },
        {
          "command": "devsnippet.searchSnippets",
          "when": "view == devsnippet.snippetsView",
          "group": "navigation"
        },
        {
          "command": "devsnippet.refreshSnippets",
          "when": "view == devsnippet.snippetsView",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "devsnippet.editSnippet",
          "when": "view == devsnippet.snippetsView && viewItem == snippet",
          "group": "inline"
        },
        {
          "command": "devsnippet.copySnippet",
          "when": "view == devsnippet.snippetsView && viewItem == snippet",
          "group": "inline"
        },
        {
          "command": "devsnippet.deleteSnippet",
          "when": "view == devsnippet.snippetsView && viewItem == snippet",
          "group": "inline"
        }
      ],
      "editor/context": [
        {
          "command": "devsnippet.newSnippet",
          "group": "DevSnippet"
        }
      ]
    },
    "configuration": {
      "title": "DevSnippet",
      "properties": {
        "devsnippet.cloudSync": {
          "type": "boolean",
          "default": false,
          "description": "Enable cloud syncing of snippets"
        },
        "devsnippet.cloudUrl": {
          "type": "string",
          "default": "",
          "description": "URL for the DevSnippet cloud service"
        }
      }
    }
  },
"scripts": {
  "build": "tsc -p ./",
  "watch": "tsc -watch -p ./",
  "vscode:prepublish": "npm run build",
  "pretest": "npm run build && npm run lint",
  "lint": "eslint src --ext ts",
  "test": "node ./out/test/runTest.js"
},
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.2",
    "@types/node": "14.x",
    "@types/uuid": "^10.0.0",
    "@types/vscode": "^1.60.0",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "eslint": "^7.27.0",
    "glob": "^7.1.7",
    "mocha": "^8.4.0",
    "typescript": "^4.3.2",
    "vscode-test": "^1.5.2"
  },
  "dependencies": {
    "@supabase/supabase-js": "^1.35.7",
    "uuid": "^8.3.2"
  }
}
